{
  "extends": "./lib/lint",
  "defaultSeverity": "warning",
  "rules": {
    "as-internal-case": {},
    "as-internal-diagnostics": {},
    "indent": {
      "options": ["spaces", 2]
    },
    "max-line-length": {
      "options": [{
        "limit": 120,
        "ignore-pattern": " *DiagnosticCode\\.[^ ]+,$"
      }]
    },
    "member-access": {
      "options": ["no-public"]
    },
    "quotemark": {
      "options": ["double"]
    },
    "semicolon": {
      "options": ["always"]
    },
    "whitespace": {
      "options": [
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-rest-spread",
        "check-type",
        "check-type-operator",
        "check-preblock"
      ]
    },
    "restrict-plus-operands": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [{
        "limit": 120,
        "ignore-pattern": " *DiagnosticCode\\.[^ ]+,$"
      }]
    },
    "quotemark": {
      "options": ["double"]
    },
    "radix": {},
    "semicolon": {
      "options": ["always"]
    }
  }
}
