{
  "extends": "../std/portable.json",
  "compilerOptions": {
    "target": "esnext",
    "outDir": "../out",
    "types" : ["node"],
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "preserveConstEnums": false,
    "useDefineForClassFields": false,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "../**/node_modules/",
    "../tests/**",
    "../lib/**",
    "./glue/wasm/**"
  ]
}
